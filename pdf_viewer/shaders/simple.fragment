out vec4 color;
in vec2 screen_pos;
in vec2 uvs;
uniform sampler2D pdf_texture;
uniform float gamma;

void main(){
    if (gamma >= 0.99 && gamma <= 1.01){
        color = vec4(texture(pdf_texture, uvs).rgb, 1.0);
    }
    else{
        vec3 c = texture(pdf_texture, uvs).rgb;
        color = vec4(pow(c.r, gamma) , pow(c.g, gamma) , pow(c.b, gamma) , 1.0);
    }
}
